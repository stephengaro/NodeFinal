<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reviews</title>
    <script src="/js/script.js" defer></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>

  <!-- header using ejs -->
  <%- include('partials/nav') %>

    <h1 class="text-center mt-5">Leave A Comment</h1>

    <!-- Form submission to add comment and contact information -->

    <div class="container">
        <div class="row mt-5">
            <div class="col-md-6 review-form">
                <form action="/contact" method="post" id="contactForm">
                    <div class="mb-3">
                        <label for="firstName" class="form-label">First Name:</label>
                        <input type="text" name="firstname" id="firstName" class="form-control" required>
                        <p id="firstDesc" class="error" style="display: none;">First name is required.</p>
                    </div>
                    <div class="mb-3">
                        <label for="lastName" class="form-label">Last Name:</label>
                        <input type="text" name="lastname" id="lastName" class="form-control" required>
                        <p id="lastDesc" class="error" style="display: none;">Last name is required.</p>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email:</label>
                        <input type="email" name="email" id="email" class="form-control" required>
                        <p id="emailDesc" class="error" style="display: none;">Enter a valid email.</p>
                    </div>
                    <div class="mb-3">
                        <label for="phone" class="form-label">Phone Number:</label>
                        <input type="text" name="phonenumber" id="phone" class="form-control">
                        <p id="phoneDesc" class="error" style="display: none;">Phone must be in the format 1-123-456-7890.</p>
                    </div>
                    <div class="mb-3">
                        <label for="city" class="form-label">City:</label>
                        <input type="text" name="city" id="city" class="form-control" required>
                        <p id="cityDesc" class="error" style="display: none;">City is required.</p>
                    </div>
                    <div class="mb-3">
                        <label for="province" class="form-label">Province:</label>
                        <input type="text" name="province" id="province" class="form-control" required>
                        <p id="provinceDesc" class="error" style="display: none;">Province is required.</p>
                    </div>
                    <div class="mb-3">
                        <label for="postal" class="form-label">Postal Code:</label>
                        <input type="text" name="postal" id="postal" class="form-control" required>
                        <p id="postalDesc" class="error" style="display: none;">Enter a valid postal code.</p>
                    </div>
                    <div class="mb-3">
                        <label for="feedback" class="form-label">Feedback:</label>
                        <textarea name="feedback" id="feedback" class="form-control" required></textarea>
                        <p id="feedbackDesc" class="error" style="display: none;">Feedback is required.</p>
                    </div>
                    <button type="submit" class="button">Add Comment</button>
                </form>
            </div>

<!-- View on recent comments added -->
            <div class="col-md-6 reviews-list"> 
                <h4> Recent Comments</h4>
                <% contacts.forEach(contact => { %>
                    <div class="border p-3 mb-4">
                        <h4 class="mb-2"><%= contact.feedback %></h4>
                        <p class="mb-2"><i><%= contact.firstname %> from <%= contact.city %></i></p>
                        <div>
                            <a href="/edit-review/<%= contact.id %>"><button class="button">Update</button></a>
                            <a href="/delete/<%= contact.id %>"><button class="button">Delete</button></a>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>

  <!-- footer using ejs -->
  <%- include('partials/footer') %>
</body>
</html>
